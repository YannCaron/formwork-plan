{
  "compilerOptions": {
    "types": [
      "node",
      "jest"
    ],
    "module": "ESNext",
    "target": "es2016",
    "declaration": true,
    "outDir": "dist/",
    /* Linting */
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "test/**/*",
    "dist/**/*"
  ]
}
